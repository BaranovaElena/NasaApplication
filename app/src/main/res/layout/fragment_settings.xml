<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    tools:context=".ui.settings.SettingsFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/settings_guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/settings_guideline_default" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/settings_guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/settings_guideline_default"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/settings_guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/settings_guideline_default"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/theme_title_text_view"
        app:layout_constraintTop_toTopOf="@id/settings_guideline_top"
        app:layout_constraintStart_toStartOf="@id/settings_guideline_left"
        app:layout_constraintEnd_toEndOf="@id/settings_guideline_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        android:text="@string/settings_theme_title_text"
        android:fontFamily="@font/christmas_font"
        android:textAlignment="center"
        android:textSize="@dimen/settings_theme_title_text_size" />

    <RadioGroup
        android:id="@+id/settings_themes_radio_group"
        app:layout_constraintTop_toBottomOf="@+id/theme_title_text_view"
        app:layout_constraintStart_toStartOf="@id/settings_guideline_left"
        app:layout_constraintEnd_toStartOf="@id/settings_guideline_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/settings_themes_radio_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/theme_default"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/settings_themes_radio_indigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/theme_indigo" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/settings_themes_radio_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/theme_red"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/theme_default_image_view"
        app:layout_constraintTop_toBottomOf="@id/settings_themes_radio_group"
        app:layout_constraintStart_toStartOf="@id/settings_guideline_left"
        app:layout_constraintEnd_toStartOf="@id/theme_indigo_image_view"
        app:srcCompat="@drawable/theme_default_day_night"
        style="@style/themeImagesStyle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/theme_indigo_image_view"
        app:layout_constraintTop_toBottomOf="@id/settings_themes_radio_group"
        app:layout_constraintStart_toEndOf="@id/theme_default_image_view"
        app:layout_constraintEnd_toStartOf="@id/theme_red_image_view"
        app:srcCompat="@drawable/theme_indigo_day_night"
        style="@style/themeImagesStyle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/theme_red_image_view"
        app:layout_constraintTop_toBottomOf="@id/settings_themes_radio_group"
        app:layout_constraintStart_toEndOf="@id/theme_indigo_image_view"
        app:layout_constraintEnd_toEndOf="@id/settings_guideline_right"
        app:srcCompat="@drawable/theme_red_day_night"
        style="@style/themeImagesStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>