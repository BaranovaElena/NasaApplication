<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/planet_mars_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    android:orientation="vertical"
    android:padding="@dimen/mars_padding_default"
    tools:context=".ui.planets.mars.PlanetMarsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                style="@style/marsTimeTitleStyle"
                android:text="@string/planet_mars_sol_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/planet_mars_sol"
                style="@style/marsTimeValueStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                style="@style/marsTimeTitleStyle"
                android:text="@string/planet_mars_day_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/planet_mars_date"
                style="@style/marsTimeValueStyle" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/planet_mars_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>