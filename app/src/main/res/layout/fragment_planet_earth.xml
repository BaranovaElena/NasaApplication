<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/earth_photo_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/earth_padding_default"
    android:background="?attr/colorOnPrimary"
    tools:context=".ui.planets.earth.PlanetEarthFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/earth_photo_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/earth_photo_caption_text_size"
        android:textAlignment="center"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/earth_photo_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/earth_photo_date_time_text_size"
        android:textAlignment="center"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/earth_photo_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>